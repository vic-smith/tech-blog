<article class="post">
  <div class="title">
    <span class="post-title">{{title}}</span>
    <a href="{{post_url}}" target="_blank">{{format_url post_url}}</a>
  </div>
  <div class="content">
    {{context}}
  </div>
  <div class="meta">
    shared by {{user.username}} on {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>